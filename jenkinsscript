node {

 stage("Git Clone"){
        git url: 'https://github.com/satish-devopsorg/spring-boot-mongo-docker.git',branch: 'master'
    
}

     stage("Maven Clean Package"){
      def mavenHome =  tool name: "maven", type: "maven"
      def mavenCMD = "${mavenHome}/bin/mvn"
      sh "${mavenCMD} clean package"
}
    
    stage("Build Docker Image"){
      
      sh 'docker build -t satishrekha/springboot:1 .'
    }   

  stage('Push Docker Image'){
       withCredentials([string(credentialsId: 'Docker_Hub_Pwd', variable: 'Docker_Hub_Pwd')]) {
          sh "docker login -u satishrekha -p ${Docker_Hub_Pwd}"
          sh 'docker push satishrekha/springboot'
        }
 }
  stage('Dockercompose Deployment '){
		  def dockercompose = 'docker-compose -f docker-compose.yml -f docker-compose-dev.yml up -d'
		  sshagent(['Docker_Dev_Server_SSH']) {
		   sh 'ssh -o StrictHostKeyChecking=no satish@10.0.2.15 ${dockercompose}'
		   }     
        
     }
       
       
    }
